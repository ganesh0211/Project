         http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd">

    <mvc:annotation-driven/>
    <context:component-scan base-package="org.usermanagement.core.controller"></context:component-scan>
    <context:component-scan base-package="org.usermanagement.core.component"></context:component-scan>
    <context:component-scan base-package="org.usermanagement.security"></context:component-scan>
